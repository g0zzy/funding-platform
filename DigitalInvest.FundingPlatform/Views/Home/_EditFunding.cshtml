
@model DigitalInvest.FundingPlatform.Models.FundingViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="fundingModalLabel">Invest in a funding</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <form asp-action="EditFunding" id="fundingForm">
            @Html.HiddenFor(f => f.Id)

            <div class="modal-body">
                <div class="form-group">
                    <label for="funding">Funding Name:</label>
                    <p>@Model.Name</p>
                </div>
                <div class="form-group">
                    <label asp-for="Investment" class="col-2 control-label"></label>
                    <input asp-for="Investment" class="form-control" />
                    <span asp-validation-for="Investment" class="text-danger"></span>

                </div>
            </div>
            <div class="modal-footer">
                <button id="saveBtn" type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }